{
  "name": "tickettoken-backend",
  "version": "0.3.0",
  "description": "Backend API for TicketToken NFT ticketing platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --testTimeout=30000",
    "test:watch": "jest --watch --testTimeout=30000",
    "test:coverage": "jest --coverage --testTimeout=30000",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^6.9.1",
    "dotenv": "^16.0.3",
    "cors": "^2.8.5",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "uuid": "^9.0.0",
    "morgan": "^1.10.0",
    "helmet": "^6.0.1",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^6.14.3",
    
    "ethers": "^6.7.1",
    "ioredis": "^5.3.2",
    "axios": "^1.6.0",
    "moment": "^2.29.4",
    "csv-writer": "^1.6.0",
    "pdfkit": "^0.13.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.20",
    "jest": "^29.4.3",
    "supertest": "^6.3.3",
    "eslint": "^8.35.0",
    "@babel/preset-env": "^7.20.2",
    "babel-jest": "^29.4.3"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": ["**/__tests__/**/*.js", "**/?(*.)+(spec|test).js"]
  }
}
